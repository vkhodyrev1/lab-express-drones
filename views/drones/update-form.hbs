<h2>Update the drone: {{name}}</h2>

<form action="/drones/{{id}}/edit" method="post">
  <label> Name:
    <input type="text" name="name" value="{{name}}"/>
  </label>

  <label> Number of propellers:
    <input type="number" name="propellers" min="3" max="6" value="{{propellers}}"/>
  </label>

  <label> Speed maximum:
    <input type="number" name="maxSpeed" min="1" max="20" value="{{maxSpeed}}"/>
  </label>

  <button> Save changes </button>
</form>